{
    "name": "agashe/sigmaphp-db",
    "description": "PHP Database Tools",
	"keywords": ["SigmaPHP", "framework"],
    "type": "library",
	"license": "MIT",
    "autoload": {
        "psr-4": {
            "SigmaPHP\\DB\\": "src/",
            "SigmaPHP\\DB\\TestCases\\": "tests/TestCases"
        }
    },
    "authors": [
        {
            "name": "Mohamed Yousef",
            "email": "engineer.mohamed.yossef@gmail.com"
        }
    ],
    "require": {
        "doctrine/inflector": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "init": "cp src/Console/templates/database.php.dist database.php",
        "exec": "./vendor/bin/phpunit tests/",
        "clean": "rm database.php",
        "test": "composer run init ; composer run exec ; composer run clean"
    },
    "bin": "bin/sigma-db"
}
